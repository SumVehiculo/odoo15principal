                            <field name="fic_seg" widget="url"/>
                        </group>
                    </page>
                    <!-- <field name="cantidad_disponible" readonly="1"/>
                    <field name="cantidad_reservada" readonly="1"/> -->
                </xpath>
            </field>
        </record>
    </data>
</odoo>
