<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="stock_analysis_report_view_form" model="ir.ui.view">
        <field name="name">stock.analysis.report.view.form</field>
        <field name="model">stock.analysis.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2 class="o_group_col_12">
                        <field name="company_id" readonly="1" options="{'no_open':True}"/>
                      </h2>
                    <group>
                        <field name="period_id" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Mostrar Reporte" name="get_report" type="object" class="oe_highlight"/>
                    o
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_analysis_report_action" model="ir.actions.act_window">
        <field name="name">Reporte de Análisis Mes</field>
        <field name="res_model">stock.analysis.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="stock_analysis_report_menu"
        name="Reporte de Análisis Mes"
        action="stock_analysis_report_action"
        parent="stock_xlsx_menu"
        sequence="400"/>
</odoo>