                <field name="amount_currency" sum="amount_currency"/>
                <field name="tc"/>
                <field name="partner"/>
                <field name="td"/>
                <field name="nro_comp"/>
                <field name="date"/>
                <field name="sale_date"/>
                <field name="cta_analytic"/>
                <field name="analytic_tags"/>
            </tree>
        </field>
    </record>

</odoo>
