<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="view_consumption_analysis_book_tree" model="ir.ui.view">
            <field name="name">consumption.analysis.book.tree</field>
            <field name="model">consumption.analysis.book</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Analsis de Consumo" create="false">
                    <field name="almacen"/>
                    <field name="producto"/>
                    <field name="cantidad" sum="cantidad"/>
                    <field name="valor" sum="valor"/>
					<field name="valuation_account_id"/>
                    <field name="input_account_id"/>
					<field name="analytic_account_id"/>
					<field name="analytic_tag_id"/>
                </tree>
            </field>
        </record>

        <record id="consumption_analysis_book_search" model="ir.ui.view">
            <field name="name">consumption.analysis.book.search</field>
            <field name="model">consumption.analysis.book</field>
            <field name="arch" type="xml">
                <search string="Analsis de Consumo">
                    <field name="almacen"/>
                    <field name="producto"/>
                    <field name="analytic_account_id"/>
                    <field name="analytic_tag_id"/>
					<field name="valuation_account_id"/>
                    <field name="input_account_id"/>
                    <separator/>
                    <group expand="1" string="Group By...">
                        <filter string="Almacen" name="almacen" icon="terp-partner" context="{'group_by':'almacen'}"/>
                        <filter string="Producto" name="producto" icon="terp-partner" context="{'group_by':'producto'}"/>
                        <filter string="Cuenta Analitica" name="analytic_account_id" icon="terp-partner" context="{'group_by':'analytic_account_id'}"/>
                        <filter string="Etiqueta Analitica" name="analytic_tag_id" icon="terp-partner" context="{'group_by':'analytic_tag_id'}"/>
                        <filter string="Cuenta Producto" name="valuation_account_id" icon="terp-partner" context="{'group_by':'valuation_account_id'}"/>
                        <filter string="Cuenta Variacion" name="input_account_id" icon="terp-partner" context="{'group_by':'input_account_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_consumption_analysis_book_it" model="ir.actions.act_window">
            <field name="name">Analsis de Consumo</field>
            <field name="res_model">consumption.analysis.book</field>
            <field name="view_id" ref="view_consumption_analysis_book_tree"/>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="consumption_analysis_book_search"/>
        </record>

    </data>
</odoo>