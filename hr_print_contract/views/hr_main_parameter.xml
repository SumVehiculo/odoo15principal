<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="hr_main_parameter_form" model="ir.ui.view">
		<field name="name">hr.main.parameter.form</field>
		<field name="model">hr.main.parameter</field>
		<field name="inherit_id" ref="hr_base_it.hr_main_parameter_form"/>
		<field name="arch" type="xml">
			<xpath expr="//notebook/page[@name='configuration']/group[3]/group[2]" position="attributes">
				<attribute name="invisible">1</attribute>
			</xpath>
			<xpath expr="//notebook/page[@name='configuration']/group[3]" position="inside">
				<group string="Vencimiento en Contratos">
					<field name="day_limit"/>
				</group>
			</xpath>
		</field>
	</record>
</odoo>