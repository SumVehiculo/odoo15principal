<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_view_form_inherit_purchase_approval_info" model="ir.ui.view">
        <field name="name">purchase.order.view.form.inherit.purchase_approval_info</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="approval_description" string="Detalles Aprobación">
                    <group>
                        <group>
                            <field name="approved_by" />
                        </group>
                        <group>
                            <field name="date_approve" string="Fecha de Aprobación"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
