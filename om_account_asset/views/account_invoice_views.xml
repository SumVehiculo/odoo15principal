<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_invoice_asset_category">
        <field name="name">account.move.supplier.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <field name="asset_asset_ids" invisible="1"/>
                <field name="number_asset_asset_ids" invisible="1"/>
                <button name="action_open_asset_asset"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-id-card-o"
                    attrs="{'invisible': [('number_asset_asset_ids', '=', 0)]}">
                    Activos
                </button>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="before">
                <field string="Categoria de Activos" name="asset_category_id" force_save="1"
                       domain="[('type','=','purchase')]" context="{'default_type':'purchase'}" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='account_id']" position="before">
                <field string="Categoria de Activos" name="asset_category_id" invisible="1"
                       domain="[('type','=','purchase')]" context="{'default_type':'purchase'}" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
