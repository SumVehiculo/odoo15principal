<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <record id="view_account_book_perception_sp_tree" model="ir.ui.view">
            <field name="name">account.book.perception.sp.tree</field>
            <field name="model">account.book.perception.sp</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Solo Percepciones" create="false">
                    <field name="periodo_con"/>
                    <field name="periodo_percep"/>
                    <field name="fecha_uso"/>
                    <field name="libro"/>
                    <field name="voucher"/>
                    <field name="tipo_per"/>
                    <field name="ruc_agente"/>
                    <field name="partner"/>
                    <field name="tipo_comp"/>
                    <field name="serie_cp"/>
                    <field name="numero_cp"/>
                    <field name="fecha_com_per"/>
                    <field name="percepcion" sum="percepcion"/>
                </tree>
            </field>
        </record>

        <record id="account_book_perception_sp_search" model="ir.ui.view">
            <field name="name">account.book.perception.sp.search</field>
            <field name="model">account.book.perception.sp</field>
            <field name="arch" type="xml">
                <search string="Solo Percepciones">
                    <field name="libro"/>
                    <field name="voucher"/>
                    <field name="fecha_uso"/>
                    <field name="partner"/>
                    <field name="ruc_agente"/>
                    <field name="numero_cp"/>
                    <separator/>
                    <group expand="1" string="Group By...">
                        <filter string="Libro" name="libro" icon="terp-partner" context="{'group_by':'libro'}"/>
                        <filter string="Voucher" name="voucher" icon="terp-partner" context="{'group_by':'voucher'}"/>
                        <filter string="Fecha Emision" name="fecha_uso" icon="terp-partner" context="{'group_by':'fecha_uso'}"/>
                        <filter string="Partner" name="partner" icon="terp-partner" context="{'group_by':'partner'}"/>
                        <filter string="Tipo de Documento" name="tipo_per" icon="terp-partner" context="{'group_by':'tipo_per'}"/>
                        <filter string="NÃºmero Comprobante" name="numero_cp" icon="terp-partner" context="{'group_by':'numero_cp'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_account_book_perception_sp_it" model="ir.actions.act_window">
            <field name="name">Solo Percepciones</field>
            <field name="res_model">account.book.perception.sp</field>
            <field name="view_id" ref="view_account_book_perception_sp_tree"/>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
            <field name="search_view_id" ref="account_book_perception_sp_search"/>
        </record>

    </data>
</odoo> 